{
  "name": "gateway",
  "version": "0.0.1",
  "description": "",
  "author": "",
  "private": true,
  "license": "UNLICENSED",
  "scripts": {
    "start:auth": "nest start -w auth-service",
    "start:gateway": "nest start -w gateway",
    "start:order": "nest start -w order-service",
    "start:seller": "nest start -w seller-service",
    "start:transaction": "nest start -w transaction-service",
    "start:mail": "nest start -w mail-service",
    "start:wallet": "nest start -w wallet-service",
    "start": "concurrently \"nest start\" \"nest start auth-service\" \"nest start order-service\" \"nest start seller-service\" \"nest start mail-service\" \"nest start wallet-service\"",
    "build": "nest build",
    "format": "prettier --write \"apps/**/*.ts\" \"libs/**/*.ts\"",
    "start:dev": "nest start --watch",
    "start:debug": "nest start --debug --watch",
    "start:prod": "node dist/apps/gateway/main",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e": "jest --config ./apps/gateway/test/jest-e2e.json"
  },
  "dependencies": {
    "@nestjs-modules/mailer": "^1.9.1",
    "@nestjs/common": "^10.0.0",
    "@nestjs/config": "^3.1.1",
    "@nestjs/core": "^10.0.0",
    "@nestjs/jwt": "^10.1.1",
    "@nestjs/microservices": "^10.2.7",
    "@nestjs/mongoose": "^10.0.1",
    "@nestjs/platform-express": "^10.2.7",
    "@nestjs/schedule": "^4.0.0",
    "@nestjs/swagger": "^7.1.13",
    "@types/multer": "^1.4.9",
    "aws-sdk": "^2.1484.0",
    "axios": "^1.5.1",
    "bcrypt": "^5.1.1",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.0",
    "concurrently": "^8.2.1",
    "cron": "^3.1.6",
    "date-fns": "^2.30.0",
    "express-useragent": "^1.0.5",
    "form-data": "^4.0.0",
    "googleapis": "^128.0.0",
    "handlebars": "^4.7.8",
    "iso-639-1": "^3.1.0",
    "moment-timezone": "^0.5.43",
    "mongoose": "^7.6.2",
    "mongoose-auto-increment": "^5.0.1",
    "mongoose-autopopulate": "^1.1.0",
    "mongoose-sequence": "^5.3.1",
    "multer": "1.4.5-lts.1",
    "nanoid": "^5.0.2",
    "nestjs-real-ip": "^3.0.1",
    "plaid": "^17.0.0",
    "pnpm": "^8.10.2",
    "qrcode": "^1.5.3",
    "random-username-generator": "^1.0.4",
    "reflect-metadata": "^0.1.13",
    "request-ip": "^3.3.0",
    "rxjs": "^7.8.1",
    "speakeasy": "^2.0.0",
    "twilio": "^4.19.0",
    "uuid": "^9.0.1"
  },
  "devDependencies": {
    "@nestjs/cli": "^10.0.0",
    "@nestjs/schematics": "^10.0.0",
    "@nestjs/testing": "^10.0.0",
    "@types/express": "^4.17.17",
    "@types/jest": "^29.5.2",
    "@types/node": "^20.3.1",
    "@types/nodemailer": "^6.4.13",
    "@types/request-ip": "^0.0.41",
    "@types/supertest": "^2.0.12",
    "@types/twilio": "^3.19.3",
    "@typescript-eslint/eslint-plugin": "^5.59.11",
    "@typescript-eslint/parser": "^5.59.11",
    "eslint": "^8.42.0",
    "eslint-config-prettier": "^8.8.0",
    "eslint-plugin-prettier": "^4.2.1",
    "jest": "^29.5.0",
    "prettier": "^2.8.8",
    "source-map-support": "^0.5.21",
    "supertest": "^6.3.3",
    "ts-jest": "^29.1.0",
    "ts-loader": "^9.4.3",
    "ts-node": "^10.9.1",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.1.3"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": ".",
    "testRegex": ".*\\.spec\\.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "collectCoverageFrom": [
      "**/*.(t|j)s"
    ],
    "coverageDirectory": "./coverage",
    "testEnvironment": "node",
    "roots": [
      "<rootDir>/apps/",
      "<rootDir>/libs/"
    ],
    "moduleNameMapper": {
      "^@app/common(|/.*)$": "<rootDir>/libs/common/src/$1",
      "^@app/schemas(|/.*)$": "<rootDir>/libs/schemas/src/$1",
      "^@app/dto(|/.*)$": "<rootDir>/libs/dto/src/$1"
    }
  }
}
